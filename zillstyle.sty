% --- 5. 左栏辅助工具 (Note/Fig/TikZ) ---
\newcommand{\leftnote}[2][0pt]{%
  \marginnote[\raggedright\footnotesize\itshape\color{zillTeal} #2]{}[#1]
}

\newcommand{\leftfig}[3][0pt]{%
  \marginnote[\centering\includegraphics[width=\marginparwidth]{#2}\captionof{figure}{#3}]{}[#1]
}

\newcommand{\lefttikz}[3][0pt]{%
  \marginnote[\centering #2\captionof{figure}{#3}]{}[#1]
}

